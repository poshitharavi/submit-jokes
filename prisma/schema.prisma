generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Joke {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  jokeText    String
  author      String
  category    String
  submittedAt DateTime  @default(now())
  status      String    @default("unmoderated")
  moderatedAt DateTime?
  moderator   String?

  @@index([category])
}

model Category {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String @unique
  description String
}
